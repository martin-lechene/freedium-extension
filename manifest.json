{
  "manifest_version": 3,
  "name": "Freedium Redirect",
  "version": "1.0",
  "description": "Ouvre les articles Medium via Freedium",
  "permissions": ["contextMenus", "tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
